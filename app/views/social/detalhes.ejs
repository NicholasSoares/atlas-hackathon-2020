<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/social.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title><%= institution.institution_name %> - Pelotas Social</title>
</head>

<body>
    <div class="header">
        <a href="/social" class="btn home-btn home-social-btn"><i class="material-icons">arrow_back</i></a>
        <a href="/social"><img class="logo" src="/images/pelotassocial.png" alt="Pelotas Social"></a>
        <a href="/access" class="btn white-outline-btn">Entrar</a>
    </div>
    <div class="container">
        <div class="filters">
            <form action="/social" method="get">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="category">Escolha uma categoria:</label>
                        </div>
                        <select class="form-control custom-select" id="role_id" name="category">
                            <option value="0" selected>Todas</option>
                            <% categories.forEach((category) => { %>
                            <option value="<%= category.institution_category_id %>">
                                <%= category.institution_category_name %></option>
                            <% }) %>
                        </select>
                        <div class="input-group-append">
                            <input class="btn orange-btn" type="submit" value="Buscar">
                        </div>
                    </div>

                </div>
            </form>
        </div>
        <hr>
        <ul>
            <li>
                <div class="my-card">
                    <div class="my-card-image">
                        <img src="<%= institution.image ? '/images/storage/'+institution.image : '/images/doar.png' %>"
                            alt="<%= institution.institution_name %>">
                    </div>
                    <div class="my-card-content">
                        <h3 class="my-cardH3"><%= institution.institution_name %></h3>
                        <hr>
                        <p class="desc"><%= institution.descricao %></p>
                        <% if(institution.telefone) { %>
                        <p class="desc">Telefone: <%= institution.telefone %></p>
                        <% } %>
                        <% if(institution.email) { %>
                        <p class="desc">E-mail: <%= institution.email %></p>
                        <% } %>
                        <% if(institution.endereco) { %>
                        <p class="desc">Endere√ßo: <%= institution.endereco %></p>
                        <% } %>
                        <% if(institution.bairro) { %>
                        <p class="desc">Bairro: <%= institution.bairro %></p>
                        <% } %>
                        <% if(institution.cep) { %>
                        <p class="desc">CEP: <%= institution.cep %></p>
                        <% } %>
                        <% if(institution.cnpj) { %>
                        <p class="desc">CNPJ: <%= institution.cnpj %></p>
                        <% } %>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</body>

</html>