<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport"
    content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('../adminSideBar'); %>
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <div class="chartjs-size-monitor"
          style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
          <div class="chartjs-size-monitor-expand"
            style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
          </div>
          <div class="chartjs-size-monitor-shrink"
            style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
          </div>
        </div>
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
        </div>

      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h2>Institutions</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
            <a href="/admin/institutions/new">
              <button type="button" class="btn btn-success">New</button>
            </a>
          </div>
        </div>
      </div>

        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Categoria</th>
                <th>Nome</th>
                <th>Endereço</th>
<!--                <th>Bairro</th>-->
                <th>CEP</th>
<!--                <th>Cidade</th>-->
                <th>Telefone</th>
<!--                <th>E-mail</th>-->
                <th>CNPJ</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% institutions.forEach((institution) => { %>
              <tr>
                <td><%= institution.institution_id %></td>
                <td><%= institution.institution_category_id %></td>
                <td><%= institution.institution_name %></td>
                <td><%= institution.endereco %></td>
<!--                <td><%= institution.bairro %></td>-->
                <td><%= institution.cep %></td>
<!--                <td><%= institution.cidade %></td>-->
                <td><%= institution.telefone %></td>
<!--                <td><%= institution.email %></td>-->
                <td><%= institution.cnpj %></td>
                <td>
                  <form action="/admin/institutions/delete" method="post">
                    <input type="hidden" name="institution_id" value="<%= institution.institution_id %>">
                    <input type="hidden" name="deleted" value="true">
                    <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
                </td> 
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

</body>

</html>